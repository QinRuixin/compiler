int shsort(int s[4], int n)
{
    int i, j, d;
    d = n / 2; 
    while(d > = 1)
    {
        i = d + 1;
        while (i <= n)
        {
            s[0] = s[i];
            j  = i - d;
            while((j > 0) && (s[0] < s[j]))
            {
                s[j + d] = s[j];
                j = j - d;
            }
            s[j + d] = s[0];
            i ++;
        }
        d = d / 2;
    }
    return 0;
}